<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/screen_background">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/start_lenta"
            android:src="@drawable/lenta_logo_transp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="76dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"/>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/start_bbc"
            android:layout_below="@id/start_lenta"
            android:layout_alignLeft="@id/start_lenta"
            android:src="@drawable/bbc_logo_transp"
            android:onClick="onClick"/>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/start_techcrunch"
            android:layout_below="@+id/start_bbc"
            android:layout_alignLeft="@+id/start_bbc"
            android:src="@drawable/techcrunch_logo_transp"
            android:onClick="onClick"/>

</RelativeLayout>